@model IEnumerable<webstide_bằng_mô_hình_MVC.Models.Product>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Areas/ADMIN/Views/Shared/_Layout.cshtml";
}

<a href="@Url.Action("Create", "SanPham")" class="btn btn-primary">Tạo sản phẩm mới</a><p><br /></p>
<style>
    table td {
        vertical-align: middle;
        /*noi dung can gia*/
    }

    .dinhdangtd {
        background-color: #DCDCDC;
    }
</style>
<body>
</body>
<!-- SearchBar.cshtml -->
@using (Html.BeginForm("Search", "Home", FormMethod.Get))
{
    <input type="text" name="query" placeholder="Search..." />
    <input type="submit" value="Search" />
}

</body>



<table class="table table-bordered table-striped">
    @* table table-bordered table-striped duong dan xen ke *@
    <tr style="text-align:center;font-size:30px;background-color:#cdcdcd;">
        <th style="font-size:40px;" colspan="6">DANH MỤC SẢN PHẨM</th>
    </tr>
    <tr style="text-align:center; background-color:#daf5dd">
        <th>
            Tên sản phẩm
        </th>
        <th>
            Mô tả
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Phân Loại
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="height:auto;">
            <td style="width:20%;">
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td style="font-size:10px; width:38%;">
                @Html.DisplayFor(modelItem => item.ProductDecription)
            </td>
            <td style="width:10%; font-size: 15px; text-align:center;">
                @String.Format("{0:N0} VND", item.ProductPrice)
            </td>
            <td width="7%;" style="text-align:center;">
                <img src="@Html.DisplayFor(modelItem => item.ProductImage)" width="40px;" />
            </td>
            <td width="10%;" style="text-align:center;">
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td width="15%;">
                <a href="@Url.Action("Edit", "SanPham", new { id = item.ProductID })" class="btn btn-warning">Chỉnh sửa</a>
                <a href="@Url.Action("Delete", "SanPham", new { id = item.ProductID })" class="btn btn-danger">Xóa</a>
            </td>
        </tr>
    }

</table>
