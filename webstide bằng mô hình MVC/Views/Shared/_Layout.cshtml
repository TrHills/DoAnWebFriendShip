    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
</head>
<body>
    <style>
        .logo span:nth-child(1) {
            color: red;
        }

        .logo span:nth-child(2) {
            color: orange;
        }

        .logo span:nth-child(3) {
            color: yellow;
        }

        .logo span:nth-child(4) {
            color: green;
        }

        .logo span:nth-child(5) {
            color: blue;
        }

        .logo span:nth-child(6) {
            color: purple;
        }
    </style>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container d-flex align-items-center">
            <img src="~/Img/logo web.png" / style="width:4%;">
            <a class="navbar-brand logo d-flex align-items-center" style="font-size:150%;">
                <b><span>F</span><span>r</span><span>i</span><span>e</span><span>n</span><span>d</span> Ship</b>
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Trang Chủ", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Sản Phẩm", "ProductList", "Products", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Liên Hệ", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
            <style>
                .search-bar {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    background-color: white;
                    padding: 5px;
                    border-radius: 30px;
                    width: 100%;
                    max-width: 300px;
                    margin: 0 auto;
                    position: relative;
                }

                    .search-bar form {
                        display: flex;
                        width: 400px;
                        position: relative;
                    }

                    .search-bar input[type="text"] {
                        width: 100%;
                        padding: 10px 40px 10px 20px;
                        border: none;
                        border-radius: 30px;
                        font-size: 16px;
                        outline: none;
                    }

                    .search-bar button {
                        position: absolute;
                        right: 10px;
                        top: 50%;
                        transform: translateY(-50%);
                        background-color: transparent;
                        border: none;
                        cursor: pointer;
                        padding: 0;
                    }

                        .search-bar button i {
                            font-size: 20px;
                            color: #333;
                        }

                /*@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@*/

                .DangNhap {
                    display: flex;
                    border-radius: 20px;
                    height: 40px;
                    width: 100px;
                    align-content: center;
                    align-items: center;
                    font-size: 15px;
                    background-color: wheat;
                }

                    .DangNhap:has(:hover) {
                        background-color: #c3f1f9;
                    }
            </style>
            <div class="search-bar">
                <form action="/search" method="GET">
                    <input type="text" placeholder="Bạn cần tìm gì?" name="q">
                    <button type="submit">
                        <i class="fas fa-search"></i>
                    </button>

                </form>
            </div>
            <div><p>ㅤ</p></div>
            <div>
                <style>
                    .no-underline {
                        text-decoration: none;
                        color: black;
                    }
                </style>
                <form>
                    <button class="DangNhap">
                        <b><b></b>@Html.ActionLink("Đăng Nhập", "DangKy", "taikhoan", null, new { @class = "no-underline" })</b>
                    </button>
                </form>
            </div>
            <div><p>ㅤ</p></div>
            <div>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @Html.Action("BagCart", "ShoppingCart")
                    </li>
                </ul>
            </div>

</nav>
    <div class="container body-content">
        @RenderBody()<hr />
