    <style>

        .product-item {
            width: 250px;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
            text-align: center;
            font-family: Arial, sans-serif;
            margin: 15px;
            display: inline-block; /* Hiển thị theo hàng */
            transition: all 0.3s ease;
            border: 1px solid transparent;
            /*max-width*/
        }

            .product-item:hover {
                transform: translateY(-10px);
                box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
                border-color: #ffd800;
            }

        .product-image {
            width: 100%;
            height: 150px;
            border-radius: 8px;
            object-fit: cover;
            margin-bottom: 10px;
        }

        .product-name {
            font-size: 1.2em;
            font-weight: bold;
            color: #333;
            margin: 10px 0 5px;
        }

        .product-price {
            font-size: 1em;
            color: #e74c3c;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .button-container {
            display: flex;
            gap: 10px;
            justify-content: center;
        }

        .button {
            padding: 10px 15px;
            font-size: 0.9em;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            color: #fff;
        }

        .button-details {
            background-color: #3498db;
            text-decoration: none;
        }

        .button-buy {
            background-color: #e74c3c;
            text-decoration: none;
        }
    </style>

    <div class="row">
        @foreach (var pro in Model)
        {
            <div class="product-item" data-category="@pro.CategoryID" style="width:17.5%;">
                <!-- Thêm thuộc tính data-category -->
                <img class="product-image" src="@Url.Content(pro.ProductImage ?? "~/Content/Images/default.jpg")" style="width:100%; height: 200px;" />                <p class="product-name">@Html.DisplayFor(model => pro.ProductName)</p>
                <p class="product-price">Đơn giá: <font color="red">@String.Format("{0:#,0}", pro.ProductPrice)</font> vnđ</p>
                <div class="button-container">
                    <a class="button button-details" href="/Products/Details/@pro.ProductID"><b>Chi tiết</b></a>
                    <a href="/ShoppingCart/AddToCart/@pro.ProductID" class="button button-buy"><b>Mua</b></a>
                </div>
            </div>
        }
    </div>
</div>
